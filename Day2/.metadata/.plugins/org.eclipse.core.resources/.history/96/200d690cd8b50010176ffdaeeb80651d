package com.demo.search;

public class BinarySearch {
	int cnt = 0;

	public int BinarySearchWithoutRecursion(int arr[], int search) {
		int low = 0;
		int high = arr.length-1;
		while (low<=high) {
			int mid = (low+high)/2;
			cnt++;
			if (arr[mid]==search) {
				System.out.println("Comaparisons are: "+cnt);
				return mid;
			}
			if (search<arr[mid]) {
				high = mid-1;
			}else {
				low = mid+1;
			}
			
		}
		return -1;

	}
	
	public int BinarySearchWithRecursion(int arr[], int search, int low, int high) {
		
		if(low<=high) {
			int mid = (low+high)/2;
			cnt++;
			if (arr[mid]==search) {
				System.out.println("Comaparisons are: "+cnt);
				return mid;
			}
			else if (search<arr[mid]) {
				return BinarySearchWithRecursion(arr, search, low, mid-1);
			}else {
				return BinarySearchWithRecursion(arr, search, mid+1, high);
			}
			
		}
		return -1;

	}
	
	
	
	
}
