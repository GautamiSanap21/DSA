package com.demo.search;

public class BinaryWithoutRecursion {

	public int BinarySearchWithoutRecursion(int arr[], int search) {
		int low = 0;
		int high = arr.length-1;
		int cnt = 0;
		while (low<=high) {
			int mid = (low+high)/2;
			cnt++;
			if (arr[mid]==search) {
				System.out.println("Comaparisons are: "+cnt);
				return mid;
			}
			if (search<arr[mid]) {
				high = mid-1;
			}else {
				low = mid+1;
			}
			
		}
		return -1;

	}
	
	public int BinarySearchWithRecursion(int arr[], int search) {
		int low = 0;
		int high = arr.length-1;
		int cnt = 0;
		while (low<=high) {
			int mid = (low+high)/2;
			cnt++;
			if (arr[mid]==search) {
				System.out.println("Comaparisons are: "+cnt);
				return mid;
			}
			if (search<arr[mid]) {
				high = mid-1;
			}else {
				low = mid+1;
			}
			
		}
		return -1;

	}
	
	
	
	
}
