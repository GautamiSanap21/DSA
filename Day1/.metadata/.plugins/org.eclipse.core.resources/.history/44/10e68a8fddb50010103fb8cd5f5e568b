package com.demo.array;

public class MyArray {
	private int arr[];
	private int count;

	// default constructor
	public MyArray() {
		arr = new int[10];
		count = 0;
	}

//	parameterized constructor with size attribute
	public MyArray(int size) {
		arr = new int[size];
		count = 0;
	}

	
	public MyArray(int argarr[]) {
		this.arr = argarr;
		for (int i : arr) {
			if (i!=0) {
				count++;
				this.count = count;
			}
		}
	}

	public int getCapacity() {
		return arr.length;
	}

	public int getSize() {
		return count;
	}

	public void display() {
		for (int i = 0; i < count; i++) {
			System.out.print(arr[i]	+"\t");
		}
		
	}

	// add element at the end
	public boolean addAtEnd(int num) {
		if (count < arr.length) {
			arr[count] = num;
			count++;
			return true;
		}
		return false;

	}
	
	public boolean addAtGivenPosition(int pos, int value) {
		if (count < arr.length) {
			for (int i = count; i > pos; i--) {
				arr[i] = arr[i-1];
			}
			arr[pos] = value;
			count++;
			return true;
		}
		return false;
		
	}
	
	
	public boolean deleteByPosition(int pos) {
		if (pos < count) {
			for (int i = pos; i < count-1; i++) {
				arr[i] = arr[i+1];
			}
			count--;
			return true;
		}
		return false;
		
	}
	
	public int searchByValue(int value) {
		for (int i = 0; i < count; i++) {
			if (arr[i]==value) {
				return i;
			}
		}
		return -1;
	}
	
	public boolean deleteFirstOccur(int value) {
			int val = searchByValue(value);
			if (val != -1){
					return deleteByPosition(val);	
			
		}
		return false;
	}
	
	public void rotateArray(boolean flag,int num) {
		if(flag) {
			for(int cnt=0;cnt<num;cnt++) {
				int temp = arr[count-1];
				for(int i=count-1;i>0;i--) {
					arr[i]=arr[i-1];
				}
				arr[0]=temp;
			}
		}else {
			for(int cnt=0;cnt<num;cnt++) {
				int temp = arr[0];
				for(int i=0;i<count-1;i++) {
					arr[i]=arr[i+1];
				}
				arr[count-1]=temp;
			}
		}
	}
	
	public int[] reverseArray(boolean flag) {
		if(flag) {
			for(int i=0,j=count-1;i<j;i++,j--) {
				int temp = arr[i];
				arr[i] = arr[j];
				arr[j]=temp;
			}
			return arr;
		}else {
			int[] arr1 = new int[count];
			for(int i=count-1,j=0;i>=0;i--,j++) {
				arr[j] = arr[i];
			}
			return arr1;
		}
	}
	
	public int findMax() {
		int max=arr[0];
		for(int i=0;i<count;i++) {
			if(max<arr[i]) {
				max=arr[i];
			}
		}
		return max;
	}
	
	public int[] exchangeIndexValue() {
		int max = findMax();
		int[] arr1 = new int[max+1];
		for(int i=0;i<arr[1].length;i++) {
			arr[i] = -1;
		}
		//Exchange index with value
		for(int i=0;i<count;i++) {
			int idx = arr[i];
			int value = i;
			arr[idx] = value;
		}
		return arr1;
		
	}

}
