package com.demo.list;

import java.util.Iterator;

public class DoublyLinkedList {
	Node head;
	class Node{
		int data;
		Node prev, next;
		public Node(int data) {
			this.data = data;
			prev = null;
			next = null;
		}
		
	}
	public DoublyLinkedList() {
		head = null;
	}
	
	public void addAtEnd(int value) {
		 Node newnode = new Node(value);
		 if (head==null) {
			head = newnode;
      		}else {
			Node temp = head;
			while(temp.next!=null) {
				temp=temp.next;
			}
			newnode.prev = temp;
			temp.next = newnode;
//			newnode.next=null;
		}
	}
	
	public void addByPosition(int pos, int val) {
		Node newnode = new Node(val);
		Node temp = head;
		if (pos==1) {
			head = newnode;
			newnode.next = head;
			head.prev = newnode;
		}else {
			for (int i = 1; temp!=null && i < pos-2; i++) {
				temp = temp.next;
			}
			if (temp!=null) {
				newnode.next = temp.next;
				temp.next = newnode;
				newnode.prev = temp;
				if (newnode.next!=null) {
					newnode.next.prev = newnode;
				}
			}else {
				System.out.println("Position is beyond limit");
			}
		}
	}
	
	
	public void addByValue(int val,int num) {
		Node newnode = new Node(num);
		Node temp = head;
		if(head.data == val) {
			newnode.next = temp.next;
			newnode.prev = temp;
			newnode.next.prev = newnode;
			temp.next = newnode;
//			newnode.prev = temp;
//			temp.next = newnode;
		}else {
			while (temp.next!=null && temp.data!=val) {
				temp = temp.next;
				temp.next = newnode;
			}
			if (temp.next!=null) {
				newnode.next = temp.next;
				newnode.next.prev = newnode;
				newnode.prev = temp;
			}else {
				System.out.println(val+" Value not found");
			}
		}
	}
	
	
	public void displayData() {
		Node temp = head;
		while(temp!=null) {
			System.out.print(temp.data+"--->");
			temp=temp.next;
		}
		System.out.println("null");
	}
	
	
}
