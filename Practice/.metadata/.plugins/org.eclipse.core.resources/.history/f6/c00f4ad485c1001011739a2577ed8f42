package com.demo.circularQueue;

public class CircularQueueUsingArray {
	int arr[];
	int front;
	int rear;

	public CircularQueueUsingArray() {
		arr = new int[10];
		front = -1;
		rear = -1;
	}

	public CircularQueueUsingArray(int size) {
		arr = new int[size];
		front = -1;
		rear = -1;
	}

	public boolean isEmpty() {
		if (front == -1) {
			return true;
		}
		return false;
	}

	public boolean isFull() {
		return (rear + 1) % arr.length == front;
//		if (front==0 && rear == arr.length-1) {
//			return true;
//		}
//		else if ((rear + 1) % arr.length == front) {
//			return true;
//		}
//			return false;
	}

	public void enQueue(int val) {
		if (!isFull()) {
			if (front == -1) {
				front = 0;
				rear = 0;
				arr[rear] = val;
				System.out.println(val + " added");
			} else {
				rear = (rear + 1) % arr.length;
				arr[rear] = val;
				System.out.println(val + " added");
			}
		} else {
			System.out.println("Queue is full...");
		}
	}

	public void deQueue() {
		if (!isEmpty()) {
			if (front == rear) {
				front = -1;
				rear = -1;
			} else {
				front = (front + 1) % arr.length;
			}
		} else {
			System.out.println("Queue is empty...");
		}
	}

	public void displayData() {
		if (front == -1) {
			System.out.println("Queue is Empty...");
		} else {                   
			
			System.out.println(arr[front]);
			
			while(front!=rear) {
				front = (front+1)%arr.length;
				if(front==rear+1) {
					break;
				}
				System.out.println(arr[front]);
			}
			
//			while (i!=rear+1) {
//				i++;
//				if (i==rear+1) {
//					break;
//				}
//				System.out.println(arr[i]);
//			}
			
		}
	}

}
