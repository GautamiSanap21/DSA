package com.demo.array;

public class OneDArray {
	int arr[];

	
	public int addition(int arr[]) {
		int sum = 0;
		for (int i = 0; i < arr.length; i++) {
			sum+=arr[i];
		}
		return sum;
		
	}
	
	public int[] addDigits(int arr[]) {
		for (int i = 0; i < arr.length; i++) {
			int num = arr[i];
			int rmd = num%10;
			
		}
		return arr;
		
	}
	
}
