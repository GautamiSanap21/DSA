package com.demo.array;

public class OneDArray {
	
	public int addition(int arr[]) {
		int sum = 0;
		for (int i = 0; i < arr.length; i++) {
			sum+=arr[i];
		}
		return sum;
		
	}
	
	public int[] addDigits(int arr[]) {
		int sumarr[] = new int[arr.length];
		for (int i = 0; i < arr.length; i++) {
			int num = arr[i];
			int sum=0;
			int rmd = num%10;
			int temp=num/10;
			num=temp%10;
			sum = sum+rmd;
			
		}
		return sumarr;
		
	}
	
}
